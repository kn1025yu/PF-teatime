<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10">
      <h1>Follow Users</h1>
      <% if @users.empty? %>
        <span>ユーザーはいません</span>
      <% else %>
        <table>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <thead>
            <tr>
              <% @user.followings.each do |user| %>
                <th>
                  <%= attachment_image_tag user, :profile_image, class: "rounded-circle", format: 'jpeg', fallback: "no_image.png", size: "60x60" %>
                </th>
                <th><%= user.name %></th>
                <th><%= "フォロー数: #{@user.followings.count}" %></th>
                <th><%= "フォロワー数: #{@user.followers.count}" %></th>
                <th><%= link_to 'Show', user_path(user) %></th>
              <% end %>
            </tr>
          </thead>
        <% end %>
      </table>
    </div>
  </div>
</div>