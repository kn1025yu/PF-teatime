<% if post_image.bookmarked_by?(current_user) %>
  <%= link_to post_image_bookmarks_path(post_image), method: :delete, class: "fas fa-star star_yellow",remote: true do %>
  <%= post_image.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to post_image_bookmarks_path(post_image), method: :post, class: "far fa-star", remote: true do %>
  <%= post_image.bookmarks.count %>
  <% end %>
<% end %>