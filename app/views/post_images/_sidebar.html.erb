<div class="col-md-3">
  <br>
    <%= attachment_image_tag user, :profile_image, class: "rounded-circle", format: 'jpeg', fallback: "no_image.png", size: "150x150" %>
    <table class="table">
      <tbody>
        <tr>
          <th>Name</th>
	        <th><%= user.name %></th>
	      </tr>
	      <tr>
	        <th>Introduction</th>
	        <th><%= user.introduction %></th>
	      </tr>
	      <tr>
	        <th>Follows</th>
	        <th>
	          <%= link_to followings_user_path(user) do %>
              <%= user.followings.count %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>Followers</th>
          <th>
            <%= link_to followers_user_path(user) do %>
              <%= user.followers.count %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>Bookmarks</th>
          <th>
            <%= link_to bookmarks_user_path(user) do %>
              <%= user.bookmarks.count %>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
    <div>
      <% if current_user == user %>
        <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-cogs"></i>
        <% end %>
      <% else %>
        <%= render 'relationships/follow_button', user: user %>
      <% end %>
    </div>
</div>