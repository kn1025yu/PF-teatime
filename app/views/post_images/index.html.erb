<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>errors have occurred
  <% @post_image.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'post_images/sidebar', post_image: @post_image, user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Posts</h2>
      <table class="table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
       </thead>

        <tbody>
          <% @post_images.each do |post_image| %>
            <tr>
              <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
              <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td class="favorite-btn"><%= render "favorites/favorites", book: book %></td>
              <td>コメント数: <%= book.book_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>