<div class="container">
  <div class="row">
    <div class="col-6 mt-3">

      <h4 class="mb-4">User post</h4>

      <%= form_with model: @post_image, local: true do |f| %>

        <table class="table table-borderless">
          <tr>
            <td><%= f.label "Title" %></td>
            <td><%= f.text_field :title, class: "form-control" %></td>
          </tr>

          <tr>
            <%= attachment_image_tag @post_image, :image, class: "rounded-circle", fallback: "no_image.png", size: "60x60" %>
            <label for="inputImage">Image</label>
            <%= f.file_field :image, placeholder: "Image" %>
          </tr>

          <tr>
            <td><%= f.label "Tags" %></td>
            <td><%= f.text_field :tag_name, class: "form-control" %></td>
          </tr>

          <tr>
            <td><%= f.label "Content" %></td>
            <td><%= f.text_field :content, class: "form-control" %></td>
            <td></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit 'Update',class: "btn btn-success rounded-pill mt-3" %></td>
          </tr>
        </table>

      <% end %>
      <%= link_to 'back', :back %>
    </div>
    
  </div>
</div>