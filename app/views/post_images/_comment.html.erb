<% @post_image.post_comments.each do |post_comment| %>
      <%= link_to user_path(post_comment.user) do %>
         <%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.png", size: "50x50" %>
         <%= post_comment.user.name %>
      <% end %>
      <%= post_comment.comment %>
    <% if current_user == post_comment.user %>
      <%= link_to 'Destroy', post_image_post_comment_path(post_comment.post_image_id, post_comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %>
    <% end %>
    <br>
<% end %>